<UserControl x:Class="QuanLyBanHang.Views.QLNguoiDung.QMK"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:local="clr-namespace:QuanLyBanHang.Views.QLNguoiDung"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Text="Quên mật khẩu" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Center"/>

            <TextBlock Text="Email của bạn:"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0 5 0 15"/>

            <Button Content="🔐 Gửi yêu cầu" Height="35" Click="Gui" Background="#007ACC" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="QuanLyBanHang.Views.QLNguoiDung.ĐN_ĐX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyBanHang.Views.QLNguoiDung"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
            <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Đăng nhập / Đăng xuất" FontSize="28" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Center"/>

            <TextBlock Text="Tên đăng nhập:" FontWeight="SemiBold" />
            <TextBox x:Name="txtUsername" Height="30" Margin="0 5 0 15" />

            <TextBlock Text="Mật khẩu:" FontWeight="SemiBold" />
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0 5 0 25"/>

            <Button Content="Đăng nhập" Height="35" Background="#2980b9" Foreground="White" FontWeight="Bold" Click="ĐN" Margin="0 0 0 10"/>

            <Button Content="Đăng xuất" Height="35" Background="#c0392b" Foreground="White" FontWeight="Bold" Click="ĐX"/>

            <TextBlock x:Name="lblStatus" Foreground="Red" Margin="0 15 0 0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>

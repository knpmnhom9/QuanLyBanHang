<UserControl x:Class="QuanLyBanHang.Views.QLNguoiDung.ĐK_TK"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyBanHang.Views.QLNguoiDung"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"> 
    <Grid>
            <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Đăng ký tài khoản" FontSize="28" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Center"/>

            <TextBlock Text="Tên đăng nhập:" FontWeight="SemiBold" />
            <TextBox x:Name="txtUsername" Height="30" Margin="0 5 0 15" />

            <TextBlock Text="Mật khẩu:" FontWeight="SemiBold" />
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0 5 0 15"/>

            <TextBlock Text="Xác nhận mật khẩu:" FontWeight="SemiBold" />
            <PasswordBox x:Name="txtConfirmPassword" Height="30" Margin="0 5 0 25"/>

            <Button Content="Đăng ký" Height="35" Background="#27ae60" Foreground="White" FontWeight="Bold" Click="ĐK"/>

            <TextBlock x:Name="lblStatus" Foreground="Red" Margin="0 15 0 0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
